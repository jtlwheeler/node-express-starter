{
  "name": "node-express-starter",
  "version": "1.0.0",
  "description": "Node application with express and Jasmine.",
  "main": "server.js",
  "author": "JT Wheeler",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts && yarn tslint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "yarn build && node dist/src/server.js",
    "test": "jasmine-ts \"./spec/**/*.spec.ts\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "joi": "^13.1.2",
    "mongoose": "^5.0.3",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jasmine": "^2.8.6",
    "@types/joi": "^13.0.5",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.0.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.0",
    "@types/sinon": "^4.1.3",
    "@types/supertest": "^2.0.4",
    "jasmine-ts": "^0.2.1",
    "sinon": "^4.3.0",
    "supertest": "^3.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
